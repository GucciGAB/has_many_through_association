<h1 class="text-4xl font-semibold text-gray-900 mb-6">Patients</h1>
<%= link_to 'New Patient', new_patient_path, class: 'px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 mb-4 inline-block' %>

<div class="overflow-x-auto">
  <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-sm">
    <thead class="bg-gray-50">
      <tr>
        <th class="py-3 px-6 text-left text-sm font-medium text-gray-600">Patient</th>
        <th class="py-3 px-6 text-left text-sm font-medium text-gray-600">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @patients.each do |patient| %>
        <tr class="border-t hover:bg-gray-100">
          <td class="py-4 px-6 text-sm text-gray-800"><%= patient.name %></td>
          <td class="py-4 px-6 text-sm">
            <%= link_to 'Show', patient_path(patient), class: 'text-blue-600 hover:text-blue-800' %> |
            <%= link_to 'Edit', edit_patient_path(patient), class: 'text-yellow-600 hover:text-yellow-800' %> |
            <%= link_to 'Delete', patient_path(patient), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-600 hover:text-red-800' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
